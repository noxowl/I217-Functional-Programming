mod! GCD {
    -- imports
    pr(NAT)

    -- signature
    op gcd : Nat Zero -> Nat .
    op gcd : Nat NzNat -> NzNat .
    op gcd : Nat Nat -> Nat .

    -- CafeOBJ vars
    var X : Nat .
    var NzY : NzNat .

    -- equations
    eq gcd(X, 0) = X .
    eq gcd(X, NzY) = gcd(NzY, X rem NzY) .
}

open GCD .
    red gcd(24,36) . -- compute the gcd of 24 & 36 
    red gcd(2015,31031) . -- compute the gcd of 2015 & 31031
close
